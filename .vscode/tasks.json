{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Development Server",
            "type": "shell",
            "command": "go",
            "args": ["run", "cmd/server/main.go"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Download Dependencies",
            "type": "shell",
            "command": "go",
            "args": ["mod", "download"],
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "go",
            "args": ["test", "./..."],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        }
    ]
}
